@model ProyectoWebN.Data.Entity.Product

@{
    ViewData["Title"] = "Eliminar producto";
}

<h1>Eliminar producto...</h1>

<h3>Usted esta seguro de eliminar este producto?</h3>
<div>
    <hr />
    <img src="~/Image/img4.png" class="img-fluid" alt="...">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastPurchase)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastPurchase)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastSale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastSale)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar Producto" class="btn btn-outline-danger" />
        <a asp-action="Index" class="btn btn-outline-info">Volver a la lista</a>
    </form>

    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)" alt=" Image" style="width:100px; height:150px;max-width:100%; height:auto" />
        }

    </div>
</div>
